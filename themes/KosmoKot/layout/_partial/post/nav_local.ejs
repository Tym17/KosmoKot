<div id="nav-local">
  <span id="actions">
    <ul>
    <% if (page.prev) { %>
    <li><a class="icon" href="<%- url_for(page.prev.path) %>"><i class="fa fa-chevron-left" aria-hidden="true" onmouseover="$('#id-prev').toggle();" onmouseout="$('#id-prev').toggle();"></i></a></li>
    <% } %>
    <% if (page.next) { %>
    <li><a class="icon" href="<%- url_for(page.next.path) %>"><i class="fa fa-chevron-right" aria-hidden="true" onmouseover="$('#id-next').toggle();" onmouseout="$('#id-next').toggle();"></i></a></li>
    <% } %>
    <li><a class="icon" href="#" onclick="$('html, body').animate({ scrollTop: 0 }, 'fast');"><i class="fa fa-chevron-up" aria-hidden="true" onmouseover="$('#id-top').toggle();" onmouseout="$('#id-top').toggle();"></i></a></li>
    <li><a class="icon" href="#"><i class="fa fa-share-alt" aria-hidden="true" onmouseover="$('#id-share').toggle();" onmouseout="$('#id-share').toggle();" onclick="$('#d-share').toggle();return false;"></i></a></li>
    </ul>
    <span id="id-prev" class="info" style="display:none;">Previous post</span>
    <span id="id-next" class="info" style="display:none;">Next post</span>
    <span id="id-top" class="info" style="display:none;">Back to top</span>
    <span id="id-share" class="info" style="display:none;">Share post</span>
  </span>
  <br/>
  <div id="d-share" style="display: none">
    <%- partial('_partial/post/share', { icon_class_name: '' }) %>
  </div>
  <div id="toc">
    <%- toc(page.content) %>
  </div>
</div>